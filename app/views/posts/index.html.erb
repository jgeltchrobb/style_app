<p id="notice"><%= notice %></p>
  
<%= render 'partials/post_filter' %>

<div class="col">
<div class="row">
<h1>Posts</h1>

<table class="table" id="flexy">
  <thead>
    <tr>
      <th scope="col">Image</th>
      <th scope="col">Title</th>      
      <th scope="col">Content</th>
      <th scope="col">Author</th>
      <th scope="col">Account Type</th>
      <th scope="col">Created</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
  <div class="posts">
      <tr id="post_index">
        <td class="col-sm-1"><%= link_to image_tag(post.image_url(:post)), post_path(post) %></td>
        <td class="col-sm-1"><%= post.title %></td>
        <td class="col-sm-5"><%= post.content %></td> 
        <td><%= link_to "Show/Hide", class: "toggleLink" %></td>       
        <td class="col-sm-1"><%= post.user.profile.username %></td>   
        <td class="col-sm-1"><%= post.owner_role %></td>
        <% if (Time.now - post.created_at).to_i / 60 < 60 %>
          <td class="col-sm-1"><%= (Time.now - post.created_at).to_i / 60 %> minutes ago</td>
        <% elsif ((Time.now - post.created_at).to_i / 60 / 60) < 24%>
          <td class="col-sm-1"><%= ((Time.now - post.created_at).to_i / 60) / 60 %> hours ago</td>
        <% else %>
          <td class="col-sm-1"><%= (((Time.now - post.created_at).to_i / 60) / 60) / 24 %> days ago</td>
        <% end %>

      <!--  <td><%= link_to "Comment" %></td> -->
 
        <td><%= link_to 'Show', post_path(post) %></td>  
        <% if post.user == current_user %>  
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td> <br>
        <% else %>
          <td></td>
          <td></td>
        <% end %>
      </tr>
      </div>
      <tr>
        <td colspan="12">
          <% post.comments.each do |comment| %>
            <div class="comments" style="margin-left:3em">
              <%= image_tag comment.user.profile.profile_pic_url(:thumb) %>
              <strong><p><%= comment.user.profile.username.capitalize %></p></strong>
              <p><%= comment.content %></p>
            </div>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>

<br>

<%= link_to 'New Post', new_post_path %>
</div>

