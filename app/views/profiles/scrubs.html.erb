<h1>Scrubs</h1>

<div class="panel panel-default">
  <div class="panel-body">
    <form class="form-inline">
      <div class="form-group">
        <label for="username">Username:</label>
        <input type="text" name="username"  class="form-control">
      </div>
      <div class="form-group">
        <label for="bio">Bio:</label>
        <input type="text" name="bio"  class="form-control">
      </div>
      <div class="form-group">
        <label for="suburb">Suburb:</label>
        <input type="text" name="suburb"  class="form-control">
      </div>
      <div class="form-group">
        <label for="state">State:</label>
        <input type="text" name="state"  class="form-control">
      </div>
      <div class="form-group">
        <label for="postcode">Postcode:</label>
        <input type="text" name="postcode"  class="form-control">
      </div>
      <div class="form-group">
        <label for="country">Country:</label>
        <input type="text" name="country"  class="form-control">
      </div>
      <input type="submit" value="Filter" class="btn btn-default">
    </form>
  </div>
</div>

<% @profiles.each do |profile| %>
    <% if profile.user.has_role?(:scrub) %>
      <%= image_tag profile.profile_pic_url(:medium) %>
      <%= profile.user.email %>
      <%= profile.username %>
      <% if profile.location.latitude.present? && current_user.profile.location.latitude.present? %>
        <% scrub_loc = [profile.location.latitude,profile.location.longitude] %>
        <%= "#{Geocoder::Calculations.distance_between(@user_loc, scrub_loc, :units => :km)} km away" %>
      <% else %>
        <strong><%= "User has no location info" %></strong>
      <% end %>
      <%= link_to 'Profile', profile_path(profile.id) %><br />
      <br>
    <% end %>
<% end %>