<%= bootstrap_form_for(@profile) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field login_field">
    <%= form.text_field :username, hide_label: true, placeholder: "Username" %>
  </div>
  <br>

  <div class="field login_field">
    <%= form.text_area :bio, hide_label: true, placeholder: "Bio" %>
  </div>
<br>
  <div class="field login_field">
    <%= form.file_field :profile_pic, hide_label: true, placeholder: "Choose a profile picture" %>
  </div>
<br>
  <div class="field login_field">
    <%= form.number_field :rating, hide_label: true, placeholder: "Rating" %>
  </div>
<br>
<% if !profile.user_role.present? %>
  <div class="field login_field">
    <%= form.radio_button :user_role, "stylist", hide_label: true %>
    <%= form.label :stylist %>
    <%= form.radio_button :user_role, "scrub", hide_label: true %>
    <%= form.label :scrub %>    
  </div>
<% end %>
  <div class="field login_field">
    <%= form.fields_for :location do |builder| %>
      <%= render "location_fields", :form => builder %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
