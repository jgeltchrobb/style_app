<h1>Stylists</h1>


<% @users.each do |user| %>
  <% @profiles.each do |profile| %>
    <% if profile.user_id == user.id %>
      <%= image_tag profile.profile_pic_url(:thumb) %>
    <% end %> 
  <% end %>
  
  <%= user.email %>
  <%= link_to 'Profile', profile_path(user.profile_id) %><br />
  <br>
<% end %>

