<p id="notice"><%= notice %></p>

<h1>Deals</h1>

<table>
  <thead>
    <tr>
      <th>Stylist agree?</th>
      <th>Scrub agree?</th>
      <th>Paid?</th>
      <th>Profile</th>
      <th>User</th>
      <th>Offer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deals.each do |deal| %>
      <tr>
        <td><%= deal.offer.price %></td>
        <td><%= deal.stylist_agree? %></td>
        <td><%= deal.stylist_agree? %></td>
        <td><%= deal.stylist_agree? %></td>
        <td><%= deal.scrub_agree? %></td>
        <td><%= deal.paid? %></td>
        <td><%= deal.profile %></td>
        <td><%= deal.user %></td>
        <td><%= deal.offer %></td>
        <td><%= link_to 'Show', deal %></td>
        <td><%= link_to 'Edit', edit_deal_path(deal) %></td>
        <td><%= link_to 'Destroy', deal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

